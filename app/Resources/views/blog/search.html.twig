{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/search.js') }}"></script>
{% endblock %}

{% block main %}
    <form action="{{ path('blog_search') }}" method="get">
        <div class="form-group">
            <input type="text" name="q" class="form-control search-field" placeholder="{{ 'post.search_for'|trans}}" autocomplete="off" autofocus>
        </div>

        <div id="results">
        </div>
    </form>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}